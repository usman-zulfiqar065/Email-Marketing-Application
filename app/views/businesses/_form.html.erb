<%= form_with(model: business) do |form| %>
  <%= render "shared/error_messages", object: business %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
