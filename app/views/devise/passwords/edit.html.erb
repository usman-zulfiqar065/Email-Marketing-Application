<div class="d-flex flex-column p-5 m-auto w-40rem mt-5 shadow">
  <h3 class="text-center">Change your password?</h3>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-3">
      <%= f.label :password, "New password", class: 'form-label text-muted' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirm new password", class: 'form-label text-muted' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="text-center">
      <%= f.submit "Change my password", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
